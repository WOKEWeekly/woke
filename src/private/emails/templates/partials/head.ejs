<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="color-scheme" content="light" />
<meta name="supported-color-schemes" content="light" />

<link
  href="https://fonts.googleapis.com/css?family=Raleway:400,700"
  rel="stylesheet"
  type="text/css"
/>

<link
  rel="stylesheet"
  href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
  integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
  crossorigin="anonymous"
/>

<head>
  <style type="text/css">
    .email {
      background: rgb(57, 17, 68);
      margin: 0 auto;
      max-width: 576px;
      padding: 1.5em 0;
    }

    .email-content {
      background: #fff;
      color: #000;
      font-family: 'Raleway', Arial, Helvetica, sans-serif;
      font-size: 1.05em;
      line-height: 1.5;
      margin: 0 auto;
      padding: 1.5em;
    }

    header,
    footer {
      background: rgb(31, 2, 39);
      color: rgb(255, 255, 255);
      font-family: 'Raleway', Arial, Helvetica, sans-serif;
      font-size: 0.9em;
      padding: 1em;
    }

    .hyperlink {
      color: rgb(188, 131, 255);
    }

    .hyperlink:hover {
      color: rgb(151, 105, 204);
    }

    .header-image-container {
      padding: 0;
    }

    .header-image {
      max-height: 250px;
      object-fit: cover;
      object-position: center;
      user-select: none;
      width: 100%;
    }

    .content-image {
      margin: 1em 0;
      object-fit: cover;
      object-position: top;
      user-select: none;
      width: 100%;
    }

    .button-container {
      margin: 1em 0;
      padding: 0.5em 0;
    }

    .button {
      background: rgb(60, 5, 75);
      border-radius: 10px;
      color: #fff !important;
      cursor: pointer;
      font-size: 0.85em;
      font-weight: bold;
      padding: 1.2em;
      text-decoration: none;
    }

    footer {
      align-items: center;
      display: flex;
      flex-direction: column;
      text-align: center;
    }

    .footer-content {
      width: 75%;
    }

    .footer-social-container,
    .signature {
      width: 175px;
    }

    .footer-social-container {
      display: flex;
      justify-content: space-evenly;
      margin: 0.4em 0;
    }

    .footer-social-links {
      width: 17%;
    }

    .footer-social-links img {
      border-radius: 5px;
      width: 100%;
    }

    .tagline {
      margin: 0.5em 0;
    }

    .copyright {
      margin-top: 1em;
    }

    /* Article specific */

    .article-metadata {
      align-items: flex-start;
      display: flex;
    }

    .article-details {
      margin-left: 0.6em;
    }

    .author-link {
      color: rgb(122, 10, 153);
      font-weight: bold;
    }

    .author-link:hover {
      color: rgb(180, 13, 226);
    }

    .author-thumbnail {
      border-radius: 50%;
      user-select: none;
      width: 40px;
    }

    /* Media queries for mobile */

    @media (max-width: 576px) {
      .email {
        padding: 0;
      }

      footer {
        font-size: 0.7em;
      }

      .header-image-container {
        margin: 0;
      }

      .header-image {
        margin: 0;
        max-height: 200px;
        padding: 0;
      }

      .article-details {
        font-size: 0.8em;
      }

      .author-thumbnail {
        margin: 0;
      }
    }
  </style>
</head>
