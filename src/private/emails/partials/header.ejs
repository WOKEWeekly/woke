<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="color-scheme" content="light" />
<meta name="supported-color-schemes" content="light" />

<link
  href="https://fonts.googleapis.com/css?family=Raleway:400,700"
  rel="stylesheet"
  type="text/css"
/>

<link
  rel="stylesheet"
  href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
  integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
  crossorigin="anonymous"
/>

<head>
  <style type="text/css">
    .email {
      background: rgb(57, 17, 68);
      margin: 0 auto;
      max-width: 768px;
      padding: 1.5em 0;
    }

    .email-content {
      background: #fff;
      color: #000;
      font-family: 'Raleway', Arial, Helvetica, sans-serif;
      font-size: 1.05em;
      line-height: 1.5;
      margin: 0 auto;
      padding: 1.5em;
    }

    .header {
      padding: 0;
    }

    .header-image {
      max-height: 250px;
      object-fit: cover;
      object-position: top;
      user-select: none;
      width: 100%;
    }

    .button-container {
      cursor: pointer;
      margin: 1em 0;
      padding: 0.5em 0;
    }

    .button {
      background: rgb(60, 5, 75);
      border-radius: 10px;
      color: #fff !important;
      font-size: 0.85em;
      font-weight: bold;
      padding: 1.2em;
      text-decoration: none;
    }

    .signature {
      width: 175px;
    }

    @media (max-width: 576px) {
      .email {
        padding: 0;
      }

      .header {
        margin: 0;
      }

      .header-image {
        margin: 0;
        max-height: initial;
        padding: 0;
      }
    }
  </style>
</head>
